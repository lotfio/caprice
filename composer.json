{
    "name": "lotfio/caprice",
    "description": "Caprice nice and easy weasy templating engine for php",
    "license": "MIT",
    "authors": [
        {
            "name": "lotfio lakehal",
            "email": "contact@lotfio.net"
        }
    ],

    "require": {
        "php": "^8.0"
    },

    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^4.0"
    },

    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Caprice\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    
    "scripts": {
        "test": [
            "phpunit"
        ],
        "psalm" : [
            "psalm --show-info=true"
        ]
    },

    "minimum-stability": "dev"
}
